<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/showgraphdata"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginBottom="29dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/insertgraphdata"
        app:layout_constraintEnd_toEndOf="@+id/showimagedata"
        app:layout_constraintStart_toStartOf="@+id/insertgraphdata"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/insertgraphdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/showimagedata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showgraphdata" />

    <Button
        android:id="@+id/drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/showimagedata"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/insertimagedata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insertgraphdata" />

    <Button
        android:id="@+id/insertimagedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="211dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showimagedata" />

</android.support.constraint.ConstraintLayout>